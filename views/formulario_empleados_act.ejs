<div id="formulario_empleados_act">

    <div class="modal fade" id="empleados_act" tabindex="-1" aria-labelledby="swModalLabel" aria-hidden="true">
        <div class="modal-dialog  modal-lg">
            <div class="modal-content" id="content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titulo_modal">REGISTRO DE ADMINISTRADORES DEL SIBUMB</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="smartwizard_empleado_act" dir="rtl-">
                        <ul class="nav nav-progress">
                            <li class="nav-item">
                                <a class="nav-link">
                                    <div class="num">1</div>
                                    Información personal
                                </a>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div id="step-1" class="tab-pane" role="tabpanel" aria-labelledby="step-1">
                                <form id="form-empleado-act-1" class="row row-cols-2 ms-5 me-5 needs-validation" novalidate>

                                    <input id="empleadoId_act" name="empleadoId_act" hidden>
                                    <div class="col">
                                        <label for="nombre_empleado_act" class="form-label">Nombre
                                            completo</label>
                                        <input type="text" name="nombre_empleado_act" id="nombre_empleado_act" class="form-control"
                                            placeholder="Nombre completo" minlength="3" maxlength="50" required>
                                        <div class="valid-feedback">
                                            Correcto!
                                        </div>
                                        <div class="invalid-feedback">
                                            Datos faltantantes o incorrectos.
                                        </div>
                                    </div>
                                    <div class="col">
                                        <label for="apellidos_empleado_act" class="form-label">Apellidos Empleado</label>
                                        <input type="text" name="apellidos_empleado_act" id="apellidos_empleado_act" class="form-control"
                                            placeholder="Apellido Paterno" minlength="3" maxlength="50" required>
                                        <div class="valid-feedback">
                                            Correcto!
                                        </div>
                                        <div class="invalid-feedback">
                                            Datos faltantantes o incorrectos.
                                        </div>
                                    </div>
                                    <div class="col">
                                        <label for="domicilio_empleado_act" class="form-label">Domicilio</label>
                                        <input type="text" name="domicilio_empleado_act" id="domicilio_empleado_act" class="form-control"
                                            placeholder="Domicilio" minlength="3" maxlength="50" required>
                                        <div class="valid-feedback">
                                            Correcto!
                                        </div>
                                        <div class="invalid-feedback">
                                            Datos faltantantes o incorrectos.
                                        </div>
                                    </div>
                                    <div class="col">
                                        <label for="correo_empleado_act" class="form-label">Correo electrónico</label>
                                        <input type="email" name="correo_empleado_act" id="correo_empleado_act" class="form-control"
                                            placeholder="correo" minlength="3" maxlength="50" required>
                                        <div class="valid-feedback">
                                            Correcto!
                                        </div>
                                        <div class="invalid-feedback">
                                            Datos faltantantes o incorrectos.
                                        </div>
                                    </div>
                                    <div class="col">
                                        <label for="telefono_empleado_act" class="form-label">Telefono</label>
                                        <input type="text" name="telefono_empleado_act" id="telefono_empleado_act"
                                            placeholder="Telefono" class="form-control" minlength="10" maxlength="10"
                                            required>
                                        <div class="valid-feedback">
                                            Correcto!
                                        </div>
                                        <div class="invalid-feedback">
                                            Datos faltantantes o incorrectos.
                                        </div>
                                    </div>
                                    <div class="col">
                                        <label for="n_lote_empleado_act" class="form-label">Numero de lote</label>
                                            <select name="n_lote_empleado_act" id="n_lote_empleado_act" class="form-select">
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                
                                            </select>
                                        <div class="valid-feedback">
                                            Correcto!
                                        </div>
                                        <div class="invalid-feedback">
                                            Datos faltantantes o incorrectos.
                                        </div>
                                    </div>
                                </form>
                            </div>
                            
                        </div>
                    </div>
                   
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" id="actualizar-btn-empleado-act">Actualizar</button>
                    <button class="btn btn-danger" onclick="onCancel_act()">Cancelar</button>
                </div>
            </div>
        </div>
    </div>

</div>